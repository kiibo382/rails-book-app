<div class="row">
  <aside class="col-md-4">
    <section class="author_info">
      <h1>
        <% if @author.image.attached? %>
          <%= image_tag @author.display_image %>
        <% end %>
        <%= @author.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @author.books.any? %>
      <h3>Books (<%= @author.books.count %>)</h3>
      <ol class="books">
        <%= render @books %>
      </ol>
      <%= will_paginate @books %>
    <% end %>
  </div>
</div>