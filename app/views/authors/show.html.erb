<div class="row">
  <aside class="col-md-4">
    <section class="author_info">
      <% if @author.image.attached? %>
        <%= image_tag @author.avatar_image, class: "avatar" %>
      <% end %>
      <h2><%= @author.name %></h2>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @author.books.any? %>
      <h3>Books (<%= @author.books.count %>)</h3>
      <ol class="books">
        <%= render @books %>
      </ol>
      <%= will_paginate @books %>
    <% end %>
  </div>
</div>