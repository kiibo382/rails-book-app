<% provide(:title, 'All authors') %>
<h1>All authors</h1>
<div class="container authors">
  <div class="row">
    <% @authors.each do |author| %>
      <li class="col-xs-6 col-md-4 col-lg-3">
        <% if author.image.attached? %>
          <%= image_tag author.display_image %>
        <% end %>
        <%= link_to author.name, author %>
      </li>
    <% end %>
  </div>
</div>
