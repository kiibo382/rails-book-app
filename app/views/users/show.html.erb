<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-sm-4">
    <section class="user_info">
      <h2>
        <% if @user.image.attached? %>
          <%= image_tag @user.avatar_image, class: "user_avatar" %>
        <% else %>
          <%= gravatar_for @user %>
        <% end %>
        <%= @user.name %>
      </h2>
      <h3>いいねしている本</h3>
      <% @user.liked_books.each do |book| %>
        <p><%= link_to book.title, book %></p>
      <% end %>
    </section>
  </aside>

  <div class="col-sm-8">
    <h3>フォロー済み著者</h3>
    <% @authors.each do |author| %>
      <li class="follow_author">
        <%= image_tag author.avatar_image, class: "avatar" %>
        <p><%= link_to author.name, author %></p>
      </li>
    <% end %>
    <h3>コメント一覧</h3>
    <% @comments.each do |comment| %>
      <li class="user-comment"><%= link_to comment.content, comment.book %></li>
    <% end %>
  </div>
</div>