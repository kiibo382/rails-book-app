<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <% if @user.image.attached? %>
          <%= image_tag @user.avatar_image, class: "user_avatar" %>
        <% else %>
          <%= gravatar_for @user %>
        <% end %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <% @authors.each do |author| %>
    <li class="follow_author col-md-8">
      <%= image_tag author.avatar_image, class: "avatar" %>
      <p><%= link_to author.name, author %></p>
    </li>
  <% end %>
</div>