<% provide(:title, "Edit user") %>
<h2 class="center margin">Update your profile</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :image,"User image" %>
      <%= f.file_field :image, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <h4>注意</h4>
      <p class="margin-top">User imageをご登録であれば、下記の登録は不要です。（User imageが優先して表示されます。）
      <div class="gravatar_edit margin-top">
        <%= gravatar_for @user %>
        <a href="https://gravatar.com/emails">change</a>
      </div>

      <%= f.submit "Save changes", class: "btn btn-green margin" %>
    <% end %>


    <script type="text/javascript">
      $("#user_image").bind("change", function() {
        var size_in_megabytes = this.files[0].size/1024/1024;
        if (size_in_megabytes > 5) {
          alert("申し訳ございません。User imageの最大のファイルサイズは5MBです。より小さいサイズのファイルをお選びください。");
          $("#user_image").val("");
        }
      });
    </script>
  </div>
</div>