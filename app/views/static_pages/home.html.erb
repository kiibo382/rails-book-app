<div class="jumbotron jumbotron-extend">
  <div class="container-fluid">
    <h1>著者と読者を繫げるコミュニティ</h1>
    <% if logged_in? %>
    <h1>~BookLiike~</h1>
    <% else %>
      <%= link_to "BookLikeを始めよう！", signup_path, class: "btn btn-lg btn-success margin" %>
    <% end %>
  </div>
</div>

<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
    </aside>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <% @books.each do |book| %>
      <li class="all_books col-xs-4 col-md-3 col-lg-2.4">
        <% if book.image.attached? %>
          <%= image_tag book.display_image %>
        <% end %>
        <p><%= link_to book.title, book %></p>
      </li>
    <% end %>
  </div>
</div>