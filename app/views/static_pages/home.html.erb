<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="question_form">
        <%= render 'shared/question_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Question Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
  </div>
<% else %>

<div class="center jumbotron">
  <h1>Rankin へようこそ！</h1>
  
  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<%= link_to image_tag("green.jpg", alt: "image", width: "200px") %>
<% end %>